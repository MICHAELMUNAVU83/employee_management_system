<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="submission-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :title) %>
    <%= text_input(f, :title) %>
    <%= error_tag(f, :title) %>

    <%= label(f, :description) %>
    <%= text_input(f, :description) %>
    <%= error_tag(f, :description) %>

    <%= label(f, :type) %>
    <%= text_input(f, :type) %>
    <%= error_tag(f, :type) %>

    <%= label(f, :image) %>
    <%= text_input(f, :image) %>
    <%= error_tag(f, :image) %>

    <%= label(f, :pdf) %>
    <%= text_input(f, :pdf) %>
    <%= error_tag(f, :pdf) %>

    <%= label(f, :link) %>
    <%= text_input(f, :link) %>
    <%= error_tag(f, :link) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
